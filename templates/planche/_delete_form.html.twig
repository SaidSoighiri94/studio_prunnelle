<form method="post" action="{{ path('app_planche_delete', {'id': planche.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette planche ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ planche.id) }}">
    <button type="submit" class="btn btn-outline-danger">
        <i class="fas fa-trash-alt me-2"></i>Supprimer
    </button>
</form>
