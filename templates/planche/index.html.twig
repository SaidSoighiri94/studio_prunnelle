{% extends 'base.html.twig' %}

{% block title %}Planche index{% endblock %}

{% block body %}
    <h1>Planche index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomPlanche</th>
                <th>CreateAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planche in planches %}
            <tr>
                <td>{{ planche.id }}</td>
                <td>{{ planche.nomPlanche }}</td>
                <td>{{ planche.createAt ? planche.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ planche.updatedAt ? planche.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_planche_show', {'id': planche.id}) }}">show</a>
                    <a href="{{ path('app_planche_edit', {'id': planche.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_planche_new') }}">Create new</a>
{% endblock %}
