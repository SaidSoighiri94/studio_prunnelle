{% extends 'base.html.twig' %}

{% block title %}TypeVente index{% endblock %}

{% block body %}
    <h1>TypeVente index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomTypeVente</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_vente in type_ventes %}
            <tr>
                <td>{{ type_vente.id }}</td>
