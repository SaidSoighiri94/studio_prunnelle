                <td>{{ type_vente.createdAt ? type_vente.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ type_vente.updatedAt ? type_vente.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_type_vente_show', {'id': type_vente.id}) }}">show</a>
