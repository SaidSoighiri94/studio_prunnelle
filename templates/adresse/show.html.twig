{% extends 'base.html.twig' %}

{% block title %}Détails de l'adresse{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="card login-card shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                                <li class="breadcrumb-item"><a href="{{ path('app_adresse_index') }}">Adresses</a></li>
                                <li class="breadcrumb-item active">Détails</li>
                            </ol>
                        </nav>
                        <h1 class="login-title mt-2">Détails de l'adresse</h1>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th class="bg-light" style="width: 200px;">Rue</th>
                                <td>{{ adresse.rue }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Ville</th>
                                <td>{{ adresse.ville }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Code Postal</th>
                                <td>{{ adresse.codePostale }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Pays</th>
                                <td>{{ adresse.pays }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Date de création</th>
                                <td>{{ adresse.createdAt ? adresse.createdAt|date('d/m/Y à H:i') : '' }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Dernière modification</th>
                                <td>{{ adresse.updatedAt ? adresse.updatedAt|date('d/m/Y à H:i') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="mt-4">
                    <a href="{{ path('app_adresse_index') }}" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                    <a href="{{ path('app_adresse_edit', {'id': adresse.id}) }}" class="btn btn-outline-primary me-2">
                        <i class="fas fa-edit me-2"></i>Modifier
                    </a>
                    {{ include('adresse/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
