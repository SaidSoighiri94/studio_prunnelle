{{ form_start(form) }}
    <div class="form-group">
        {{ form_errors(form) }}
        
        {% for field in form %}
            {% if not field.rendered %}
                {% if field.vars.block_prefixes[1] is defined and field.vars.block_prefixes[1] == 'checkbox' %}
                    <div class="form-check form-switch custom-switch mb-3">
                        {{ form_widget(field) }}
                        <label class="form-check-label switch-label" for="{{ field.vars.id }}">
                            <span class="switch-active">Actif</span>
                            <span class="switch-inactive">Inactif</span>
                        </label>
                        {{ form_errors(field, {'attr': {'class': 'text-danger'}}) }}
                    </div>
                {% else %}
                    <div class="mb-3">
                        {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(field, {'attr': {
                            'class': 'form-control login-input',
                            'placeholder': field.vars.label
                        }}) }}
                        {{ form_errors(field, {'attr': {'class': 'text-danger'}}) }}
                    </div>
                {% endif %}
            {% endif %}
        {% endfor %}
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary login-btn">
            <i class="fas fa-save me-2 login-icon"></i>
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
