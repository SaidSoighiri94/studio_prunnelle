{% extends 'base.html.twig' %}

{% block title %}Ecole index{% endblock %}

{% block body %}
    <h1>Ecole index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Genre</th>
                <th>Nom</th>
                <th>Tel</th>
                <th>Email</th>
                <th>Active</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ecole in ecoles %}
            <tr>
                <td>{{ ecole.id }}</td>
                <td>{{ ecole.code }}</td>
                <td>{{ ecole.genre }}</td>
                <td>{{ ecole.nom }}</td>
                <td>{{ ecole.tel }}</td>
                <td>{{ ecole.email }}</td>
                <td>{{ ecole.active ? 'Yes' : 'No' }}</td>
                <td>{{ ecole.createdAt ? ecole.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ecole.updatedAt ? ecole.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_ecole_show', {'id': ecole.id}) }}">show</a>
                    <a href="{{ path('app_ecole_edit', {'id': ecole.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ecole_new') }}">Create new</a>
{% endblock %}
