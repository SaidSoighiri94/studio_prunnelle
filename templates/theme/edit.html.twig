{% extends 'base.html.twig' %}

{% block title %}Modifier le Thème{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="card login-card shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                                <li class="breadcrumb-item"><a href="{{ path('app_theme_index') }}">Thèmes</a></li>
                                <li class="breadcrumb-item active">Modifier</li>
                            </ol>
                        </nav>
                        <h1 class="login-title mt-2">Modifier le Thème</h1>
                    </div>
                </div>

                {{ include('theme/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}

                <div class="mt-4">
                    <a href="{{ path('app_theme_index') }}" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                    {{ include('theme/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
